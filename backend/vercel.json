{
  "version": 2,
  "buildCommand": "cd backend && npm install && npm run build",
  "installCommand": "cd backend && npm install",
  "functions": {
    "api/index.ts": {
      "includeFiles": "prisma/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/health",
      "dest": "/api/index.ts"
    }
  ]
}
